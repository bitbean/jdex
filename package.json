{
  "name": "jdex-repo",
  "version": "1.0.0",
  "description": "Jdex monorepo workspace",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "audit": "NODE_ENV=production npm audit",
    "build": "npm run build --ws --if-present",
    "format": "npm run format --ws --if-present",
    "lint-ts": "npm run lint-ts --ws --if-present",
    "rand": "cat /dev/urandom | tr -dc _A-Z-a-z-0-9 | head -c${C:-32};echo;",
    "rand-help": "echo 'Change count by running `C=21 npm run rand`'",
    "test": "npm run test --workspaces --if-present"
  },
  "workspaces": [
    "./packages/jdex",
    "./packages/server",
    "./packages/client"
  ],
  "devDependencies": {
    "@types/node": "^20.11.22",
    "@types/uuid": "^9.0.8",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "glob": "^10.3.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}